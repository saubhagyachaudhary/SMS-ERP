@model SMS.AcademicControllers.mst_chapter

@{
    ViewBag.Title = "EditChapter";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <h2>Edit Chapter</h2>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                       
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.session)

                        @Html.HiddenFor(model => model.class_id)

                        @Html.HiddenFor(model => model.subject_id)

                        @Html.HiddenFor(model => model.chapter_id)



                        <div class="form-group">
                            @Html.LabelFor(model => model.chapter_name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.chapter_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.chapter_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.chapter_close, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                            <div class="col-sm-1">

                                @Html.CheckBoxFor(model => model.chapter_close, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.chapter_close, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                   
                }

                
            </div>
            <div>
                @Html.ActionLink("Back to List", "AllChapterList", new {session = ViewData["session"], subject_id = ViewData["Subject_id"], class_id = ViewData["Class_id"], section_id = ViewData["section_id"] }, new { @class = "btn btn-primary please_wait" })
            </div>
        </div>
    </div>
</div>