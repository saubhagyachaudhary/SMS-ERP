@model List<SMS.Models.attendance_register>

@{
    ViewBag.Title = "finalize_class_attendance_sheet";
}
<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 48px;
        height: 20px;  
    }

        .switch input {
            display: none;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 13px;
            width: 13px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 20px;
    }

        .slider.round:before {
            border-radius: 50%;
        }
.submit-progress {
  position: fixed;
  top: 50%;
  left: 50%;
  height: 6em;
  padding-top: 2.3em;
  /* The following rules are the
     ones most likely to change */
  width: 25em;
  /* Set 'margin-left' to a negative number
     that is 1/2 of 'width' */
  margin-left: -10em;
  padding-left: 2.1em;
  background-color: black;
  color: white;
  -webkit-border-radius: 0.4em;
  -moz-border-radius: 0.4em;
  border-radius: 0.4em;
  box-shadow: 0.4em 0.4em rgba(0,0,0,0.6);
  -webkit-box-shadow: 0.4em 0.4em rgba(0,0,0,0.6);
  -moz-box-shadow: 0.4em 0.4em rgba(0,0,0,0.6);
}

.submit-progress-bg {
    background-color: lightgray;
    opacity: .5;
  }
</style>

<div class="right_col" role="main">
    <div class="row">
        <div class="submit-progress hidden">
            <i class="fa fa-2x fa-spinner fa-spin"></i>
            <label> Please wait while finalizing attendance...</label>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="overflow-x:auto;">
                    <h2>Finalize Attendance</h2>
                    @using (Html.BeginForm("finalize_class_attendance_sheet", "attendance_register", FormMethod.Post, new { id = "submit" }))
                    {
                        <table class="table table-condensed table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>

                                        Admission Number
                                    </th>
                                    <th>

                                        Roll Number
                                    </th>
                                    <th>

                                        Student Name
                                    </th>
                                    <th>

                                        Attendance
                                    </th>



                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(model => model[i].sr_num)
                                            @Html.HiddenFor(model => model[i].sr_num)
                                            @Html.HiddenFor(model => model[i].class_id)
                                            @Html.HiddenFor(model => model[i].section_id)
                                            @Html.HiddenFor(model => model[i].session)
                                            @Html.HiddenFor(model => model[i].att_date)
                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model[i].roll_no)
                                            @Html.HiddenFor(model => model[i].roll_no)
                                      
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model[i].std_name)
                                          
                                        </td>
                                        <td>
                                            @*@Html.CheckBoxFor(model => model[i].attendance)*@
                                            @if (Model[i].attendance)
                                            {
                                                <label class="switch">
                                                    <input type="checkbox" checked id="ch_@i" onclick="recalculate()">
                                                    <span class="slider round"></span>
                                                </label>
                                            }
                                            else
                                            {
                                                <label class="switch">
                                                    <input type="checkbox"  id="ch_@i" onclick="recalculate()">
                                                    <span class="slider round"></span>
                                                </label>
                                            }
                                            
                                            @Html.HiddenFor(model => model[i].attendance, new { id = "ch_hidden_" + i })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                         <div class="container">

                        <div class="row">
                            <div class="col-md-2">
                                <button type="submit"
                                        id="submitButton"
                                        class="btn btn-primary"
                                        onclick="return DisplayProgressMessage(this, 'Saving...');">
                                    Save
                                </button>

                               
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="col-md-7">
                                        <label>Number of present students</label>
                                    </div>

                                    <div id="grandTotalPresent" class="col-md-1">


                                    </div>
                                </div>
                             </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="col-md-7">
                                        <label>Number of absent students </label>
                                    </div>

                                    <div id="grandTotalAbsent" class="col-md-1">


                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    
    window.onload = function()
    {
        recalculate();
    }

    function DisplayProgressMessage(ctl, msg) 
    {
       
                
        if(confirm("Are you sure you want to submit attendance?"))
        {
            monthCheckValue();

           
            $(ctl).prop("disabled",true).text(msg);
            $(".submit-progress").text(" Please wait while finalizing attendance...");
            $(".submit-progress").removeClass("hidden");
            $("body").addClass("submit-progress-bg");
            document.forms["submit"].submit();
        }
        else
            return false;

       

        return true;
    }

    function monthCheckValue()
    {
        for (i = 0; i < @Model.Count() ; i++)
        {
            document.getElementById("ch_hidden_"+i.toString()).value = document.getElementById("ch_"+i.toString()).checked;

        }

    }

    function recalculate()
    {
        var present = 0;
        var absent = 0;

        for (i = 0; i < @Model.Count() ; i++)
        {
            if(document.getElementById("ch_"+i.toString()).checked)
            {
                present = present + 1; 
            }
            else
            {
                absent =absent + 1;
            }

        }
        $('#grandTotalPresent').html(present);
        $('#grandTotalAbsent').html(absent);
    }
</script>