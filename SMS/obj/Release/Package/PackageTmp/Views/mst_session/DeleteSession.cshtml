@model SMS.Models.mst_session

@{
    ViewBag.Title = "DeleteSession";
}

<div class="right_col" role="main">
    <h2>Delete Session</h2>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">

                    

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                       
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.session)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.session)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.session_start_date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.session_start_date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.session_end_date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.session_end_date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.session_active)
                            </dt>

                            <dd>
                              
                                @if (Model.session_active == "Y")
                                {
                                    @("Open")
                                }
                                else
                                {
                                    @("Close")
                                }
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" /> |
                                @Html.ActionLink("Back to List", "AllSessionList")
                            </div>
                        }
                    </div>
                    </div>
</div>
</div>
</div>
</div>
