@model IEnumerable<SMS.Models.mentor_detail>

@{
    ViewBag.Title = "AllMentorDetailList";
}
<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">


<div class="right_col" role="main">
    <p>
        
        @if (Request.Cookies["staff_id"].Value.ToString() == ViewBag.mentor_id.ToString() && Int32.Parse(ViewBag.flag.ToString()) == 0)
        {
            @Html.ActionLink("Submit observation report", "addObservation", new { ViewBag.mentor_id, ViewBag.mentor_no, ViewBag.mentor_date }, new { @class = "btn btn-primary please_wait" });
        }
    
        
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="overflow-x:auto;">
                    <h2>Mentor Observation List</h2>

                    <table id="datatable" class="table table-condensed table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.serial_no)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mentor_no)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mentor_date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mentor_observation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.parents_observation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.observation_date)
                                </th>
                                <th>
                                    Control Panel
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.serial_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mentor_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mentor_date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mentor_observation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.parents_observation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.observation_date)
                                    </td>
                                    <td>
                                        @{
                                            if (System.DateTime.Now.AddMinutes(0).ToString("yyyy-MM-dd") == item.observation_date.ToString("yyyy-MM-dd"))
                                            {
                                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) @:|

                                                 @Html.ActionLink("Delete", "deleteObservation",  new { ViewBag.mentor_id,  item.serial_no, item.mentor_no,item.mentor_date,j = 1 })
                                                 
                                             }


                                        }
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                   
                    </div>
              
                </div>
            <div>
                @Html.ActionLink("Back to List", "AllMentorHeaderList", new { area = "" }, new { @class = "btn btn-primary please_wait" })
            </div>
            </div>
        </div>
    </div>
@section scripts{
    <script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>


    <script>
                        $('#datatable').dataTable();
    </script>
}

