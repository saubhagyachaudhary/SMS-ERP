@model SMS.Models.mentor_header

@{
    ViewBag.Title = "AssignMentor";
}

<link href="~/vendors/datetimepicker/jquery-ui.css" rel="stylesheet" />

<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">




                <h2>Assign Mentor</h2>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(model => model.sr_num, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                            <div class="col-md-10 col-xs-12 col-sm-10">
                                @Html.EditorFor(model => model.sr_num, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sr_num, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.mentor_name, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                            <div class="col-md-10 col-xs-12 col-sm-10">
                                @Html.DropDownList("mentor_id", ViewData["mentor_id"] as IEnumerable<SelectListItem>, "Select Mentor", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.mentor_name, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.problem, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                            <div class="col-md-10 col-xs-12 col-sm-10">
                                @Html.TextAreaFor(model => model.problem, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.problem, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.dead_line, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                            <div class="col-md-10 col-xs-12 col-sm-10">
                                @Html.EditorFor(model => model.dead_line, new { id = "dead_line", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.dead_line, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-sm-offset-2 col-md-10 col-sm-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "AllMentorHeaderList", new { area = "" }, new { @class = "btn btn-primary please_wait" })
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/vendors/datetimepicker/jquery-1.10.2.js"></script>
    <script src="~/vendors/datetimepicker/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#dead_line").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                minDate: new Date()
            });

        });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}