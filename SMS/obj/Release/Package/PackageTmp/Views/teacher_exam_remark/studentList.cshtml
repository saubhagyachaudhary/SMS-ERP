@model List<SMS.Models.teacher_exam_remark>

@{
    ViewBag.Title = "studentList";
    
}
<div class="right_col" role="main">
    <h2>Assign Remarks</h2>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="overflow-x:auto;">

                    @using (Html.BeginForm("studentListSubmit", "teacher_exam_remark", FormMethod.Post, new { id = "submit", onsubmit = "Are you sure you want to submit?" }))
                    {
                        <div class="table-responsive">
                            <table id="datatable" class="table table-condensed table-striped table-bordered table-hover">
                                <thead class="blue-grey">
                                    <tr>
                                        <th>
                                            Roll Number
                                        </th>
                                        <th>
                                            Admission Number
                                        </th>
                                        <th>
                                            Student Name
                                        </th>
                                        <th>
                                            Remarks
                                        </th>
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(model => model[i].roll_no)
                                                @Html.HiddenFor(model => model[i].roll_no)
                                            </td>
                                            <td>
                                                @Html.HiddenFor(model => model[i].session)
                                                @Html.DisplayFor(model => model[i].sr_number)
                                                @Html.HiddenFor(model => model[i].sr_number)
                                                @Html.HiddenFor(model => model[i].term_id)
                                                @Html.HiddenFor(model => model[i].class_id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model[i].std_name)
                                                @Html.HiddenFor(model => model[i].section_id)
                                            </td>
                                            <td>
                                                @Html.TextAreaFor(model => model[i].remark)
                                                @Html.HiddenFor(model => model[i].user_id)
                                            </td>
                                     </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <div class="col-md-10 col-xs-12 col-sm-10">
                            <input type="submit" value="Submit" class="btn btn-primary" />


                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

