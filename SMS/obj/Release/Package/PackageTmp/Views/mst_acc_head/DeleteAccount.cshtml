@model SMS.Models.mst_acc_head

@{
    ViewBag.Title = "DeleteAccount";
}

<div class="right_col" role="main">
    <h2>Delete Account</h2>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.acc_name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.acc_name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.nature)
                            </dt>

                            <dd>
                                @if (Model.nature == "A")
                                {
                                    @("Additive")
                                }
                                else
                                {
                                    @("Subtractive")
                                }
                            </dd>

                            

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" /> |
                                @Html.ActionLink("Back to List", "AllAccountList")
                            </div>
                        }
                    </div>
                </div>
                </div>
</div>
</div>
</div>