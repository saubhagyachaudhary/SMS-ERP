@model IEnumerable<SMS.AcademicControllers.mst_class_notebook>

@{
    ViewBag.Title = "AllHWWorkList";
}
<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<div class="right_col" role="main">
    <p>
        @Html.ActionLink("Add New Home Work", "AddHW", new { session = @ViewData["session"], class_id = @ViewData["class_id"], subject_id = ViewData["subject_id"], section_id = ViewData["section_id"], chapter_id = ViewData["chapter_id"] }, new { @class = "btn btn-primary" })
    </p>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="overflow-x:auto;">

                    <h2>List of all Home Work of the Chapter</h2>
                    <table id="datatable" class="table table-condensed table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.work_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.work_date)
                                </th>
                                <th>Control Panel</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.work_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.work_date)
                                    </td>
                                    <td>
                                       
                                        @if (item.work_date == System.DateTime.Now.Date)
                                        {
                                            @Html.ActionLink("Delete", "DeleteHW", new { session = item.session, class_id = item.class_id, subject_id = item.subject_id, section_id = item.section_id, chapter_id = item.chapter_id, work_id = item.work_id }, new { @class = "btn btn-success btn-sm please_wait" })
                                        }
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "AllChapterList", new { session = @ViewData["session"], class_id = @ViewData["class_id"], subject_id = ViewData["subject_id"], section_id = ViewData["section_id"] }, new { @class = "btn btn-primary please_wait" })
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    <script>
                        $('#datatable').dataTable();
    </script>
}
