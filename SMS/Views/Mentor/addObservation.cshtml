@model SMS.Models.mentor_detail

@{
    ViewBag.Title = "addObservation";
}



<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

               

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h2>Observation Form</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                      
                      

                        <div class="form-group">
                            @Html.LabelFor(model => model.mentor_observation, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                            <div class="col-md-10 col-xs-12 col-sm-10">
                                @Html.TextAreaFor(model => model.mentor_observation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.mentor_observation, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.parents_observation, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                            <div class="col-md-10 col-xs-12 col-sm-10">
                                @Html.TextAreaFor(model => model.parents_observation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.parents_observation, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        
                        <div class="form-group">
                            <div class="col-md-offset-2 col-sm-offset-2 col-md-10 col-sm-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "AllMentorDetailList",new {mentor_id = Model.mentor_id,mentor_no = Model.mentor_no,mentor_date = Model.mentor_date })
                </div>
                </div>
</div>
</div>
</div>