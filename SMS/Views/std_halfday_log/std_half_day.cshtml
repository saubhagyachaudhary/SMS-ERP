                                        <div style="float: left; border: 4px solid #ccc; padding: 5px">
                                            <img id="Userpic" style="width: 280px; height: 240px;" src="@ViewBag.pic" />
                                           
                                            @Html.HiddenFor(model => model.Userpic)
                                            <br>
                                            <br>
                                            <div class="col-md-offset-4 col-sm-offset-4 col-xs-offset-4">
                                                <input type="button" id="btnSave" value="Take Photo" onclick="ShowPopUp();" />
                                            </div>
                                        </div>
                                            
                                        
                                    </div>
                                </div>
                            </div>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

