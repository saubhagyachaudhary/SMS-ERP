                                        @Html.LabelFor(model => model.sr_number, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                           
                                            @Html.EditorFor(model => model.sr_number, new { htmlAttributes = new { @class = "form-control" } })
                                            
                                            @Html.ValidationMessageFor(model => model.sr_number, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Student Name</label>
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                            <input type="text" id="std_name" class="form-control" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Student Father's Name</label>
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                            <input type="text" id="std_father_name" class="form-control" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Class</label>
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                            <input type="text" id="std_class" class="form-control" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Contact Number</label>
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                            <input type="text" id="std_number" class="form-control" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.escorter_name, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-9 col-xs-12 col-sm-9">

                                            @Html.EditorFor(model => model.escorter_name, new { htmlAttributes = new { @class = "form-control" , @required = "required" } })

                                            @Html.ValidationMessageFor(model => model.escorter_name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.std_relation, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-9 col-xs-12 col-sm-9">

                                            @Html.EditorFor(model => model.std_relation, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

                                            @Html.ValidationMessageFor(model => model.std_relation, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.escorter_address, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                            @Html.TextAreaFor(model => model.escorter_address, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.escorter_address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.reason, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                            @Html.TextAreaFor(model => model.reason, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.reason, "", new { @class = "text-danger" })
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" style="display: none;" id="lbl">Enter 4 digit OTP</label>
                                        <div class="col-md-9 col-xs-12 col-sm-9">
                                            <input type="password" id="std_otp" class="form-control" style="display: none;" />
                                            <input type="hidden" id="otp" />

                                            <input type="hidden" id="count" />

                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-sm-offset-3 col-md-10 col-sm-10">
                                            <input type="submit" value="Generate Gate Pass" id="submit_form" class="btn btn-default" disabled/>
                                            <input type="button" value="Send OTP" class="btn btn-success" id="send_otp" disabled/>
                                        </div>

                                    </div>

                                </div>
                            </div>
                    }

                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="~/vendors/jquery/dist/jquery.min.js"></script>

