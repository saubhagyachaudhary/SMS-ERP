@model IEnumerable<SMS.Models.mst_exam>

@{
    ViewBag.Title = "AllExamList";
}
<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
@*<link href="~/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">*@
@*<link href="~/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">*@
@*<link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">*@
@*<link href="~/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">*@
<div class="right_col" role="main">
    <p>
        @Html.ActionLink("Add New Exam", "AddExam",new {area="" },new {@class= "btn btn-primary please_wait" })
    </p>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="overflow-x:auto;">

                    <h2>List of all Examinations</h2>

                    

                    <table id="datatable"class="table table-condensed table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.exam_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.max_no)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.convert_to)
                                </th>
                                <th>
                                    Control Panel
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                        {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.exam_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.max_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.convert_to)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditExam", new { id = item.exam_id },new {@class= "btn btn-success btn-sm please_wait" }) 
                                        @Html.ActionLink("Delete", "DeleteExam", new { id = item.exam_id }, new { @class = "btn btn-success btn-sm please_wait" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
    </div>
</div>

@section scripts{
    <script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
 
    <script>
                        $('#datatable').dataTable();
    </script>
}
