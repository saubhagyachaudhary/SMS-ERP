@model IEnumerable<SMS.Models.mst_acc_head>

@{
    ViewBag.Title = "AllAccountList";
}
<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">

<div class="right_col" role="main">
    <p>
        @Html.ActionLink("Add New Account", "AddAccount", new { area = "" }, new { @class = "btn btn-primary please_wait" })
    </p>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="overflow-x:auto;">
                    <h2>All Account List</h2>

                    <table id="datatable"class="table table-condensed table-striped table-bordered table-hover col-md-12 col-sm-12 col-xs-12">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.acc_name)
                                </th>
                                <th>
                                    Control Panel
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.acc_name)
                                    </td>
                                   
                                    <td>
                                        @Html.ActionLink("Edit", "EditAccount", new { id = item.acc_id }, new { @class = "btn btn-success btn-sm please_wait" }) 

                                        @Html.ActionLink("Delete", "DeleteAccount", new { id = item.acc_id }, new { @class = "btn btn-success btn-sm please_wait" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                </div>

</div>
</div>
</div>
@section scripts{
    <script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
  

    <script>
                        $('#datatable').dataTable();
    </script>
}


