@model SMS.Models.mst_acc_head

@{
    ViewBag.Title = "EditAccount";
}

<div class="right_col" role="main">
    <h2>Edit Account</h2>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">

                    


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.acc_id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.acc_name, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                <div class="col-md-10 col-xs-12 col-sm-10">
                                    @Html.EditorFor(model => model.acc_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.acc_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.nature, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                <div class="col-md-10 col-xs-12 col-sm-10">
                                    
                                   
                                    @if (Model.nature == "A")
                                    {
                                        @Html.RadioButtonFor(model => model.nature, "A", new { htmlAttributes = new { @class = "form-control", @checked = "checked" } }) @("Additive")
                                    }
                                    else
                                    {
                                       @Html.RadioButtonFor(model => model.nature, "A", new { htmlAttributes = new { @class = "form-control" } }) @("Additive")
                                    }

                                    @if (Model.nature == "S")
                                    {
                                        @Html.RadioButtonFor(model => model.nature, "S", new { htmlAttributes = new { @class = "form-control", @checked = "checked" } }) @("Subtractive")
                                    }
                                    else
                                    {
                                        @Html.RadioButtonFor(model => model.nature, "S", new { htmlAttributes = new { @class = "form-control"} }) @("Subtractive")
                                    }

                                   

                                     @Html.ValidationMessageFor(model => model.nature, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-sm-offset-2 col-md-10 col-sm-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "AllAccountList", new { area = "" }, new { @class = "btn btn-primary please_wait" })
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
