@model SMS.Models.mst_subject_parameters

@{
    ViewBag.Title = "DeleteParameter";
}
<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <h2>Delete Section</h2>
            <div class="x_panel">

                <div class="x_title" style="overflow-x:auto;">


                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <hr />
                        <dl class="dl-horizontal">



                            <dt>
                                @Html.DisplayNameFor(model => model.subject_name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.subject_name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.parameter_name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.parameter_name)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" />
                                @Html.ActionLink("Back to List", "AllParametersList", new { area = "" }, new { @class = "btn btn-primary please_wait" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
